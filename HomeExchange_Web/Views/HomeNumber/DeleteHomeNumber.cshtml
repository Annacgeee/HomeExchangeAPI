@model HomeExchange_Web.Models.VM.HomeNumberDeleteVM

<form asp-action="DeleteHomeNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Home</h1>
        <hr />
        <input hidden asp-for="HomeNumber.HomeNo" />
        <div class="row">

            <div class="col-2">
                <label asp-for="HomeNumber.HomeNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="HomeNumber.HomeNo" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="HomeNumber.HomeID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="HomeNumber.HomeID" disabled class="form-select" asp-items="@Model.HomeList">
                    <option disabled selected>--Select Home--</option>
                </select>
            </div>
            <div class="col-2">
                <label asp-for="HomeNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="HomeNumber.SpecialDetails" readonly class="form-control" rows="5"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexHomeNumber" asp-controller="HomeNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
